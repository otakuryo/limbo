<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.issam.projectuf2.View.InfoActivity"
    tools:showIn="@layout/activity_info">
    <LinearLayout
        android:paddingTop="20dp"
        android:paddingStart="5dp"
        android:paddingEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/info_content"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="descripcion"/>
        <TextView
            android:id="@+id/info_fIni"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fecha ini"/>
        <TextView
            android:id="@+id/info_fEnd"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="fecha fin"/>
        <TextView
            android:id="@+id/info_vYou"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="video enlace?"/>
        <LinearLayout
            android:id="@+id/info_like_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="60dp"
            android:layout_marginBottom="20dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/info_like"
                app:srcCompat="@drawable/heart_on"
                android:adjustViewBounds="true"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:contentDescription="@string/like"
                android:layout_gravity="center_horizontal"
                tools:ignore="VectorDrawableCompat" />

            <TextView
                android:id="@+id/info_num_likes"
                android:textSize="18sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1000000"
                android:layout_gravity="center_horizontal" />

        </LinearLayout>
    </LinearLayout>

</android.support.v4.widget.NestedScrollView>
